%%%%%%%%%%%%%%%%%% tests for title and section pages %%%%%%%%%%%%%%%%%% 
\newif\ifinsectionframe
\newif\ifintitleframe
\insectionframefalse
\intitleframefalse
\newcommand{\sectionframe}{
  \insectionframetrue
  \frame{\sectionpage}
  \insectionframefalse
}
\newcommand{\titleframe}{
  \intitleframetrue
  \frame{\titlepage}
  \intitleframefalse
}


